<resources>

    <!-- Base application theme. -->
    <style name="FAppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimaryBG</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/FAppTheme.Button</item>
        <item name="android:editTextStyle">@style/FAppTheme.EditText</item>
        <item name="android:textViewStyle">@style/FAppTheme.TextView</item>
    </style>

    <style name="FAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FAppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="FAppTheme.Button" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FAppTheme.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
